<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:id="@+id/detailsLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
        
    <RelativeLayout
        android:id="@+id/detailLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            ads:adSize="SMART_BANNER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            ads:adUnitId="a1526111d1a8c50"
            ads:loadAdOnCreate="true"
     ads:testDevices="TEST_EMULATOR, faef38a2c635a978" />
        
        <TextView
            android:id="@+id/nameText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/adView"
            android:drawableRight="@drawable/verifieddetail"
            android:gravity="center"
            android:padding="10.0dp"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textColor="#ffffffff"
            android:textIsSelectable="true"
            android:textSize="25.0sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/mapButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameText"
            android:layout_centerHorizontal="true"
            android:layout_margin="20.0dp"
            android:gravity="center"
            android:onClick="onClickMap"
            android:padding="7.0dp"
            android:text="Directions"
            android:textColor="#ffffffff"
            android:textSize="20.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addressText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/mapButton"
            android:layout_marginLeft="10.0dp"
            android:layout_marginRight="10.0dp"
            android:layout_marginTop="20.0dp"
            android:background="#00000000"
            android:gravity="center"
            android:padding="10.0dip"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textColor="#ffffffff"
            android:textIsSelectable="true"
            android:textSize="20.0sp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20.0dip" >

            <TableRow>

                <TextView
                    android:paddingRight="5.0dip"
                    android:text="Monday:"
                    android:textColor="#ffffffff"
                    android:textIsSelectable="true"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mondayTime"
                    android:gravity="right"
                    android:hint="@string/defaultTimings"
                    android:paddingLeft="5.0dip"
                    android:textColor="#ffffffff"
                    android:textIsSelectable="true"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:paddingRight="5.0dip"
                    android:text="Tuesday:"
                    android:textColor="#ffffffff"
                    android:textIsSelectable="true"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tuesdayTime"
                    android:gravity="right"
                    android:hint="@string/defaultTimings"
                    android:paddingLeft="5.0dip"
                    android:textColor="#ffffffff"
                    android:textIsSelectable="true"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:paddingRight="5.0dip"
                    android:text="Wednesday:"
                    android:textColor="#ffffffff"
                    android:textIsSelectable="true"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/wednesdayTime"
                    android:gravity="right"
                    android:hint="@string/defaultTimings"
                    android:paddingLeft="5.0dip"
                    android:textColor="#ffffffff"
                    android:textIsSelectable="true"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:paddingRight="5.0dip"
                    android:text="Thursday:"
                    android:textColor="#ffffffff"
                    android:textIsSelectable="true"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/thursdayTime"
                    android:gravity="right"
                    android:hint="@string/defaultTimings"
                    android:paddingLeft="5.0dip"
                    android:textColor="#ffffffff"
                    android:textIsSelectable="true"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:paddingRight="5.0dip"
                    android:text="Friday:"
                    android:textColor="#ffffffff"
                    android:textIsSelectable="true"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fridayTime"
                    android:gravity="right"
                    android:hint="@string/defaultTimings"
                    android:paddingLeft="5.0dip"
                    android:textColor="#ffffffff"
                    android:textIsSelectable="true"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:paddingRight="5.0dip"
                    android:text="Saturday:"
                    android:textColor="#ffffffff"
                    android:textIsSelectable="true"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/saturdayTime"
                    android:gravity="right"
                    android:hint="@string/defaultTimings"
                    android:paddingLeft="5.0dip"
                    android:textColor="#ffffffff"
                    android:textIsSelectable="true"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:paddingRight="5.0dip"
                    android:text="Sunday:"
                    android:textColor="#ffffffff"
                    android:textIsSelectable="true"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sundayTime"
                    android:gravity="right"
                    android:hint="@string/defaultTimings"
                    android:paddingLeft="5.0dip"
                    android:textColor="#ffffffff"
                    android:textIsSelectable="true"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/notesLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/table"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="20.0dip"
            android:background="#00000000"
            android:padding="10.0dip"
            android:text="Notes"
            android:textColor="#ffffffff"
            android:textSize="18.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notesText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/notesLabel"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:background="#00000000"
            android:gravity="center"
            android:padding="10.0dip"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textColor="#ffffffff"
            android:textIsSelectable="true"
            android:textSize="20.0sp"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>