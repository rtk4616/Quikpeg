<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/aboutpagebackground" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".DetailsActivity" >

        <TextView
            android:id="@+id/nameText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/verifieddetail"
            android:gravity="center"
            android:padding="10dp"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textColor="#ffffff"
            android:textIsSelectable="true"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/mapButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameText"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:background="@drawable/draw"
            android:gravity="center"
            android:onClick="onClickMap"
            android:padding="7dp"
            android:text="Map"
            android:textColor="#ffffff"
            android:textIsSelectable="true"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addressText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/mapButton"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:gravity="center"
            android:padding="10dp"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textColor="#ffffff"
            android:textIsSelectable="true"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" >

            <TableRow>

                <TextView
                    android:paddingRight="5dp"
                    android:text="Monday:"
                    android:textColor="#ffffff"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mondayTime"
                    android:gravity="right"
                    android:hint="@string/defaultTimings"
                    android:paddingLeft="5dp"
                    android:textColor="#ffffff"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:paddingRight="5dp"
                    android:text="Tuesday:"
                    android:textColor="#ffffff"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tuesdayTime"
                    android:gravity="right"
                    android:hint="@string/defaultTimings"
                    android:paddingLeft="5dp"
                    android:textColor="#ffffff"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:paddingRight="5dp"
                    android:text="Wednesday:"
                    android:textColor="#ffffff"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/wednesdayTime"
                    android:gravity="right"
                    android:hint="@string/defaultTimings"
                    android:paddingLeft="5dp"
                    android:textColor="#ffffff"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:paddingRight="5dp"
                    android:text="Thursday:"
                    android:textColor="#ffffff"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/thursdayTime"
                    android:gravity="right"
                    android:hint="@string/defaultTimings"
                    android:paddingLeft="5dp"
                    android:textColor="#ffffff"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:paddingRight="5dp"
                    android:text="Friday:"
                    android:textColor="#ffffff"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fridayTime"
                    android:gravity="right"
                    android:hint="@string/defaultTimings"
                    android:paddingLeft="5dp"
                    android:textColor="#ffffff"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:paddingRight="5dp"
                    android:text="Saturday:"
                    android:textColor="#ffffff"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/saturdayTime"
                    android:gravity="right"
                    android:hint="@string/defaultTimings"
                    android:paddingLeft="5dp"
                    android:textColor="#ffffff"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:paddingRight="5dp"
                    android:text="Sunday:"
                    android:textColor="#ffffff"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sundayTime"
                    android:gravity="right"
                    android:hint="@string/defaultTimings"
                    android:paddingLeft="5dp"
                    android:textColor="#ffffff"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/notesLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/table"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:padding="10dp"
            android:text="Notes"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notesText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/notesLabel"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            android:gravity="center"
            android:padding="10dp"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textColor="#ffffff"
            android:textIsSelectable="true"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>